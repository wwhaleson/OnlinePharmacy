@attribute [Authorize]
@inject HttpClient _client
@inject IJSRuntime js
@page "/Cart"
@inject NavigationManager Navigation

<PageTitle>Cart</PageTitle>

<nav class="navbar navbar-expand-lg bg-white  ">
    <div class="container" aria-label="breadcrumb" id="breadcrumbcartcontainer">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cart</li>
        </ol>
    </div>
</nav>

<div class="container" id="containercontaintable">
    <div class="d-flex flex-column">
        <h1 class="my-2" id="yourcartheader">Your Cart</h1>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead class="table-light">
                <tr id="cartcolumnname">
                    <th scope="col">Remove</th>
                    <th scope="col">Image</th>
                    <th scope="col">Product(s)</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Sub-Total</th>
                </tr>
            </thead>
            <tbody id="productsincart">
                <tr>
                    <td><a class="btn removebutton" onclick="removerow()">X</a></td>
                    <td class="product-thumbnail">
                        <img src="https://alcare.sg/wp-content/uploads/2019/08/PANC-1.jpg" alt="Image" class="productimage">
                    </td>
                    <td class="product-name">Ibuprofen</td>
                    <td class ="singlequantityprice">$49.00</td>
                    <td align="center">
                            <input type="number" class="text-center" id="numberBox" value="1" min="1" style="max-width: 100px;">
                    </td>

                    <td class="subtotalofaproduct" >$49.00</td>
                </tr>
                <tr>
                    <td><a class="btn removebutton" onclick="removerow()">X</a></td>
                    <td class="product-thumbnail">
                        <img src="https://alcare.sg/wp-content/uploads/2019/08/PANC-1.jpg" alt="Image" class="productimage">
                    </td>
                    <td class="product-name">Ibuprofen</td>
                    <td >$49.00</td>
                    <td align="center">
                        <div class="input-group mb-3" style="max-width: 120px;">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                            </div>
                            <input type="text" class="form-control text-center" value="1" placeholder=""
                                   aria-label="Example text with button addon" aria-describedby="button-addon1">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                            </div>
                        </div>
                    </td>
                    <td class="subtotalofaproduct">$49.00</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<div class="container-fluid text-center" id="totalpricecheckoutcontainer1">
    <div class="container" id="totalpricecheckoutcontainer2">
    <div class="row align-items-center">

        <div class="col" id="allproductsubtotalcol1">
            Sub-Total
        </div>
        <div class="col" id="allproductsubtotalcol2">
            <span>$0.00</span>
        </div>

    </div>

    <div class="row align-items-center">

        <div class="col" id="deliveryamountcol1">
            Delivery
        </div>
        <div class="col" id="deliveryamountcol2">
            $5.00
        </div>


    </div>

    <div class="row align-items-center" >

        <div class="col w-25" id="totalamountcol1">
            Total
        </div>
        <div class="col" id="totalamountcol2">
            <span>$5.00</span>
        </div>

    </div>

        <hr class="my-4">

    <div class="col align-self-center" id="">
            <button class="btn btn-outline-primary" type="button" @onclick="checkoutpage">PROCEED TO CHECKOUT</button>
    </div>
    </div>
</div>


@code {

    void checkoutpage()
    {
        Navigation.NavigateTo("/Checkout");
    }

}
