@attribute [Authorize]
@inject HttpClient _client
@inject IJSRuntime js
@page "/SuccessfulPurchase"
<PageTitle>Successful Purchase</PageTitle>
@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg bg-white  ">
    <div class="container" aria-label="breadcrumb" id="breadcrumbsuccessfulpagecontainer">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Confirmation</li>
        </ol>
    </div>
</nav>

<div class="container">
    <div class="d-flex flex-column" id="dflexconfirmation">
        <h1 class="mt-5" id="thankyouheader">THANK YOU</h1>

        <h3 id="successfulpurchaseheader">Your purchase have been processed</h3>

    </div>
    <div class="d-flex mt-5" id="dflexbacktostore">
        <button class="btn btn-outline-primary btn-lg" type="button" align="center" @onclick="homepage">BACK TO STORE</button>
    </div>
</div>

@code {
    void homepage()
    {
        Navigation.NavigateTo("/");
    }
}
